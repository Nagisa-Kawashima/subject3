<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-lg-6">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        </ul>
          <% end %>
        <% end %>
        <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
          </div>
          <div><label for="inputImage">Image</label></div>
          <div><%= f.file_field :profile_image, placeholder: "ユーザーの画像", accept: "image/*" %></div>
          <div class="form-group">
            <p class=mt-2>Introduction</p>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</main>

